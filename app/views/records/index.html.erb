<h1>投稿一覧</h1>
<table class="table table-bordered">
  <thead>
    <tr class="index">
      <th>施術者</th>
      <th>コメント</th>
      <th>期待値画像</th>
      <th>施術中画像</th>
      <th>保存用画像</th>
      <!-- <th>いいね</th> -->
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @records.each do |r| %>
      <tr>
        <td><%= r.person_in_charge %></td>
        <td><%= r.comment %></td>
        <td><%= image_tag r.expect_picture.url%></td>
        <td><%= image_tag r.treatment_picture.url%></td>
        <td><%= image_tag r.storage_picture.url%></td>
        <td><%= link_to '詳細確認', r %></td>
        <td><%= link_to '編集', edit_record_path(r) %></td>
        <td><%= link_to '削除', r, method: :delete, data: { confirm: '本当に削除しますか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
