<ul>
  <% comments.each do |comment| %>
    <% if comment.id.present? %>
    <ul class="list-group">
      <li class="list-group-item">
        <div class="comment-content" id ="this_comment_<%= comment.id %>"></div>
        <p><%= comment.content %>
         |<%= link_to "編集", edit_record_comment_path(record, comment), remote: true %>
         |<%= link_to "削除", record_comment_path(comment.record_id, comment.id), method: :delete, remote: true,
                                       data: { confirm: "本当に削除しますか?"} %></p>
      </li>
    <% end %>
  <% end %>
</ul>
