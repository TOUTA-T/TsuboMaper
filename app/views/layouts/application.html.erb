<!DOCTYPE html>
<html>
  <head>
    <title>Tsubomaper</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <%= javascript_include_tag 'application' %>
  </head>

  <body>
  <nav class="navbar navbar-inverse navbar-fixed-top">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#gnavi">
        <span class="sr-only">Bootstrap</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
        <%= link_to image_tag('logo.png'), records_path, class:"navbar-brand" %>
        <a class=title>Tsubo Mapper</a>
    </div>
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        <li><%= link_to '投稿一覧', records_path %></li>
        <% if user_signed_in? %>
          <li><%= link_to "ユーザーページ", edit_user_registration_path(current_user.id) %></li>
          <li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
          <li><%= link_to '管理ページへ', 'https://' %></li>
        <% else %>
          <li><%= link_to "新規ユーザー登録", new_user_registration_path %></li>
          <li><%= link_to "Login", user_session_path %></li>
        <% end %>
        <li><%= link_to "投稿する", new_record_path %></li>
        <li><%= link_to "一時 duringへ飛ぶ", during_treatment_record_path(Record.last) %></li>
        <li><%= link_to "一時 店舗TOPへ", storetop_records_path %></li>
      </ul>
    </div>
  </div>
  </nav>
  <% if notice %>
    <p class="alert alert-notice"><%= notice %></p>
  <% end %>
  <% if alert %>
    <p class="alert alert-error"><%= alert %></p>
  <% end %>

    <%= yield %>
  </body>
</html>
